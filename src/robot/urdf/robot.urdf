<?xml version="1.0"?>
<robot name="mobile_manipulator">

  <!-- Chassis Link -->
  <link name="chassis_link">
    <!-- Main chassis box -->
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <box size="0.4 0.3 0.1"/>
        </geometry>
        <material name="blue">
        <color rgba="0.2 0.4 0.8 1"/>
        </material>
    </visual>
    <!-- Arm base cylinder mounted on top -->
    <visual>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
        <geometry>
        <cylinder length="0.05" radius="0.075"/>
        </geometry>
        <material name="dark_gray">
        <color rgba="0.15 0.15 0.2 1"/>
        </material>
    </visual>
    <!-- Collision: include both shapes (same origin/structure as visuals) -->
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <box size="0.4 0.3 0.1"/>
        </geometry>
    </collision>
    <collision>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
        <geometry>
        <cylinder length="0.05" radius="0.075"/>
        </geometry>
    </collision>
    <!-- Inertial can be approximated as a single combined shape -->
    <inertial>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <mass value="6.5"/>
        <inertia ixx="0.15" ixy="0" ixz="0" iyy="0.15" iyz="0" izz="0.15"/>
    </inertial>
  </link>

  <!-- Front Left Wheel Joint -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.15 0.18 -0.05" rpy="-1.5708 0 0"/>  <!-- Front left corner, wheel on side -->
    <axis xyz="0 0 1"/>  <!-- Spins around its axle -->
  </joint>

  <!-- Front Left Wheel Link -->
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>  <!-- 12cm diameter, 4cm wide -->
      </geometry>
      <material name="wheel_black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Front Right Wheel Joint -->
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.15 -0.18 -0.05" rpy="-1.5708 0 0"/>  <!-- Front right corner -->
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Front Right Wheel Link -->
  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Back Left Wheel Joint -->
  <joint name="back_left_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="back_left_wheel"/>
    <origin xyz="-0.15 0.18 -0.05" rpy="-1.5708 0 0"/>  <!-- Back left corner -->
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Back Left Wheel Link -->
  <link name="back_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Back Right Wheel Joint -->
  <joint name="back_right_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="back_right_wheel"/>
    <origin xyz="-0.15 -0.18 -0.05" rpy="-1.5708 0 0"/>  <!-- Back right corner -->
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Back Right Wheel Link -->
  <link name="back_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="wheel_black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Base Yaw Joint -->
    <joint name="base_yaw_joint" type="revolute">
        <parent link="chassis_link"/>
        <child link="base_rotator_link"/>
        <origin xyz="0 0 0.10" rpy="0 0 0"/> <!-- top of chassis box -->
        <axis xyz="0 0 1"/> <!-- Z axis = twist -->
        <limit lower="-3.14" upper="3.14" effort="5.0" velocity="1.0"/>
    </joint>

  <!-- Base Rotator Link -->
  <link name="base_rotator_link">
    <!-- Main rectangular arm segment -->
    <visual>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.18"/>
      </geometry>
      <material name="arm_gray">
        <color rgba="0.5 0.5 0.55 1"/>
      </material>
    </visual>
    <!-- Shoulder Joint Housing (darker) -->
    <visual>
      <origin xyz="0 0 0.18" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="joint_dark_gray">
        <color rgba="0.3 0.3 0.35 1"/>
      </material>
    </visual>
    <!-- Shoulder Joint Axis (center bearing) -->
    <visual>
      <origin xyz="0 0 0.18" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.025"/>
      </geometry>
      <material name="joint_metal">
        <color rgba="0.7 0.7 0.75 1"/>
      </material>
    </visual>
    <!-- Collision: simplified box -->
    <collision>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.18"/>
      </geometry>
    </collision>
    <!-- Inertial -->
    <inertial>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <mass value="1.8"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Shoulder Joint -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="base_rotator_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.18" rpy="0 0 0"/>  <!-- Aligned with sphere center -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1.0"/>
  </joint>

  <!-- Upper Arm Link -->
  <link name="upper_arm_link">
    <!-- Main rectangular upper arm segment -->
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.07 0.07 0.2"/>
      </geometry>
      <material name="arm_gray">
        <color rgba="0.5 0.5 0.55 1"/>
      </material>
    </visual>
    <!-- Elbow Joint Housing (darker) -->
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.055"/>
      </geometry>
      <material name="joint_dark_gray">
        <color rgba="0.3 0.3 0.35 1"/>
      </material>
    </visual>
    <!-- Elbow Joint Axis (center bearing) -->
    <visual>
      <origin xyz="0 0 0.2" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.09" radius="0.022"/>
      </geometry>
      <material name="joint_metal">
        <color rgba="0.7 0.7 0.75 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <mass value="1.8"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Elbow Joint -->
  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>  <!-- Aligned with sphere center -->
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.5708" effort="100" velocity="1.0"/>
  </joint>

  <link name="forearm_link">
    <!-- Main rectangular forearm segment -->
    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <box size="0.065 0.065 0.15"/>
      </geometry>
      <material name="arm_gray">
        <color rgba="0.5 0.5 0.55 1"/>
      </material>
    </visual>
    <!-- Wrist Joint Housing (darker) -->
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.035" radius="0.05"/>
      </geometry>
      <material name="joint_dark_gray">
        <color rgba="0.3 0.3 0.35 1"/>
      </material>
    </visual>
    <!-- Wrist Joint Axis (center bearing) -->
    <visual>
      <origin xyz="0 0 0.15" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.02"/>
      </geometry>
      <material name="joint_metal">
        <color rgba="0.7 0.7 0.75 1"/>
      </material>
    </visual>
    <!-- Collision -->
    <collision>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <box size="0.07 0.07 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <!-- Wrist Pitch Joint -->
  <joint name="wrist_pitch_joint" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_pitch_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1.0"/>
  </joint>

  <!-- Wrist Pitch Link  -->
   <link name="wrist_pitch_link">
    <!-- Main wrist segment (smaller box) -->
    <visual>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.055 0.055 0.18"/>
      </geometry>
      <material name="arm_gray">
        <color rgba="0.5 0.5 0.55 1"/>
      </material>
    </visual>
    <!-- Roll joint housing (cylindrical) -->
    <visual>
        <origin xyz="0 0 0.1775" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.015" radius="0.04"/>
        </geometry>
        <material name="joint_dark_gray">
          <color rgba="0.3 0.3 0.35 1"/>
        </material>
      </visual>
    <collision>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.18"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.003"/>
    </inertial>
  </link>  

  <!-- Wrist Roll Joint -->
  <joint name="wrist_roll_joint" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0 0.1775" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.0"/>
  </joint>

  <!-- Wrist Roll Link -->
  <link name="wrist_roll_link">
    <!-- Roll bearing connector (sits right at joint) -->
    <visual>
      <origin xyz="0 0 0.0075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.015" radius="0.035"/>
      </geometry>
      <material name="joint_metal">
        <color rgba="0.7 0.7 0.75 1"/>
      </material>
    </visual>
    <!-- Gripper mount plate -->
    <visual>
      <origin xyz="0 0 0.0225" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.06 0.015"/>
      </geometry>
      <material name="wrist_dark_gray">
        <color rgba="0.35 0.35 0.4 1"/>
      </material>
    </visual>
    <!-- Center mounting block -->
    <visual>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.045 0.04"/>
      </geometry>
      <material name="joint_dark_gray">
        <color rgba="0.3 0.3 0.35 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.06 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.0008" ixy="0" ixz="0" iyy="0.0008" iyz="0" izz="0.0006"/>
    </inertial>
  </link>

  <!-- Left Gripper Joint (prismatic - slides left/right) -->
  <joint name="gripper_joint" type="prismatic">
    <parent link="wrist_roll_link"/>
    <child link="gripper1_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>  <!-- Top of wrist box -->
    <axis xyz="0 1 0"/>  <!-- Slides along Y axis -->
    <limit lower="0" upper="0.03" effort="10" velocity="0.05"/>  <!-- Slides 0 to 3cm outward -->
  </joint>

  <!-- Left Gripper Link (L-shaped) -->
  <link name="gripper1_link">
    <!-- Vertical finger part -->
    <visual>
      <origin xyz="0 0.005 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 0.012 0.05"/>
      </geometry>
      <material name="gripper_dark">
        <color rgba="0.2 0.2 0.25 1"/>
      </material>
    </visual>
    <!-- Horizontal tip part (forming the L) -->
    <visual>
      <origin xyz="0 0.011 0.053" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 0.01 0.015"/>
      </geometry>
      <material name="gripper_dark">
        <color rgba="0.2 0.2 0.25 1"/>
      </material>
    </visual>
    <!-- Rubber grip pad -->
    <visual>
      <origin xyz="0.001 0.0155 0.053" rpy="0 0 0"/>
      <geometry>
        <box size="0.008 0.001 0.012"/>
      </geometry>
      <material name="gripper_rubber">
        <color rgba="0.15 0.15 0.15 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.005 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.05"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="0 0.01 0.055" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0.005 0.025" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Right Gripper Joint (prismatic - slides left/right, mimics gripper1) -->
  <joint name="gripper2_joint" type="prismatic">
    <parent link="wrist_roll_link"/>
    <child link="gripper2_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>  <!-- Top of wrist box -->
    <axis xyz="0 -1 0"/>  <!-- Slides along -Y axis (opposite direction) -->
    <limit lower="0" upper="0.03" effort="10" velocity="0.05"/>  <!-- Slides 0 to 3cm outward -->
    <mimic joint="gripper_joint" multiplier="1.0" offset="0"/>  <!-- Mirrors gripper1 motion -->
  </joint>

  <!-- Right Gripper Link (L-shaped, mirrored) -->
  <link name="gripper2_link">
    <!-- Vertical finger part -->
    <visual>
      <origin xyz="0 -0.005 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 0.012 0.05"/>
      </geometry>
      <material name="gripper_dark">
        <color rgba="0.2 0.2 0.25 1"/>
      </material>
    </visual>
    <!-- Horizontal tip part (forming the L) -->
    <visual>
      <origin xyz="0 -0.011 0.053" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 0.01 0.015"/>
      </geometry>
      <material name="gripper_dark">
        <color rgba="0.2 0.2 0.25 1"/>
      </material>
    </visual>
    <!-- Rubber grip pad -->
    <visual>
      <origin xyz="0.001 -0.0155 0.053" rpy="0 0 0"/>
      <geometry>
        <box size="0.008 0.001 0.012"/>
      </geometry>
      <material name="gripper_rubber">
        <color rgba="0.15 0.15 0.15 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -0.005 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.05"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="0 -0.01 0.055" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 -0.005 0.025" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  
</robot>