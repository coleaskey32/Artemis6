#!/bin/bash
# Launcher that uses Homebrew Python with Webots controller module

# Set Webots environment variables
export WEBOTS_HOME="/Applications/Webots.app/Contents"
export PYTHONPATH="/Applications/Webots.app/Contents/lib/controller/python:${PYTHONPATH}"
export DYLD_LIBRARY_PATH="/Applications/Webots.app/Contents/lib/controller:${DYLD_LIBRARY_PATH}"

# Use Homebrew Python (clean, no conda library issues)
exec /opt/homebrew/bin/python3 -u "$(dirname "$0")/four_wheel_controller.py"

